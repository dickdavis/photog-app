.BookingCard
  .BookingCard__card-header
    .BookingIconPanel
      = link_to edit_booking_path(@booking), class: 'BookingIconPanel__icon-link' do
        %i{ class: 'fa fa-pencil fa-2x BookingIconPanel__icon-link_edit', title: 'Edit this booking', 'aria-hidden': 'true' }
      = link_to booking_path(@booking), method: 'delete', class: 'BookingIconPanel__icon-link', title: 'Delete this booking', data: { confirm: 'Are you sure?' } do
        %i{ class: 'fa fa-trash fa-2x BookingIconPanel__icon-link_delete', 'aria-hidden': 'true' }
  .BookingCard__card-body_not-rounded
    %h3= @booking.name
    %h4 Client Information
    %p
      %span= link_to "#{@booking.client.first_name} #{@booking.client.last_name}", client_path(@booking.client)
    %p
      %span.text-muted Email:
      = @booking.client.email
    %p
      %span.text-muted Phone:
      = @booking.client.phone_number
    %h4 Booking Details
    %p
      %span.text-muted Package:
      = @booking.booking_package.name
    %p
      %span.text-muted Scheduled date:
      = "#{format_date(@booking.start_date)} at #{format_time(@booking.start_time)}"
    %p
      %span.text-muted Duration:
      = @booking.booking_package.duration
      %span.text-muted mins
    %p
      %span.text-muted Total cost:
      = number_to_currency(@booking.booking_package.total_cost)
    %p
      %span.text-muted Retainer fee:
      = number_to_currency(@booking.booking_package.retainer_fee)
  .BookingCard__card-footer
    = link_to 'Back to Bookings', bookings_path, method: 'get'
